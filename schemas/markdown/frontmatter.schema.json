{
  "$id": "https://schemas.arusty.dev/markdown/frontmatter",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "TODO: Set Default values",
  "description": "",
  "type": "object",
  "properties": {
    "title": {
      "description": "",
      "type": "string"
    },
    "description": {
      "$comment": "TODO: description vs summary; which is better?",
      "description": "",
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "$comment": "TODO: description vs summary; which is better?",
      "description": "",
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "authors": {
      "$comment": "TODO: Should this be an object instead? (name, email, etc.)",
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "related": {
      "$comment": "TODO: Is it possible to validate the pattern? (UUID v4); or make this a $ref to another type/schema?",
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "lastUpdated": {
      "description": "",
      "$comment": "TODO: Make this an ISO TIMESTAMP",
      "type": "string"
    },
    "uuid": {
      "$comment": "TODO: Is it possible to validate the pattern? (UUID v4)",
      "description": "",
      "type": "string",
      "minLength": 1
    },
    "version": {
      "$comment": "TODO: Is 'version' worth keeping?",
      "description": "",
      "type": "string"
    },
    "scope": {
      "$comment": "TODO: Is scope a redundant version of audience?",
      "description": "",
      "type": "string"
    },
    "roles": {
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "audience": {
      "description": "",
      "$comment": "TODO: Is audience a redundant version of scope?",
      "type": "string"
    },
    "type": {
      "$comment": "TODO: Review this enum list for sanity/relevance; Also is it possible to make the enum a $ref?",
      "description": "",
      "type": "string",
      "enum": [
        "guide",
        "tutorial",
        "reference",
        "concept",
        "blog",
        "news",
        "announcement",
        "documentation"
      ]
    },
    "draft": {
      "description": "",
      "type": "boolean"
    },
    "license": {
      "$comment": "TODO: Extract this as a $ref to a license schema",
      "description": "",
      "type": "string",
      "enum": [
        "CC-BY-4.0",
        "CC-BY-SA-4.0",
        "CC0-1.0",
        "MIT",
        "GPL-3.0",
        "Apache-2.0"
      ]
    },
    "extends": {
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "keywords": {
      "description": "",
      "type": "array",
      "items": {
        "description": "",
        "type": "string",
        "enum": ["red", "amber", "green"]
      }
    },
    "bibliography": {
      "description": "",
      "$comment": "TODO: Is bibliography a reasonable value? How is it used? How is it different from a reference link?; May be useful if frontmatter is not in markdown doc?",
      "type": "string"
    },
    "toc": {
      "description": "",
      "$comment": "TODO: Determine how to represent Table of Contents structure",
      "$ref": "/schemas/markdown/toc"
    },
    "resources": {
      "description": "",
      "$comment": "TODO: Is this useful? What is represented here that is not represented in 'links' schema?",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "requirements": {
      "description": "",
      "$comment": "TODO: Is this useful? What is represented here that is not represented in 'links' schema?",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    },
    "references": {
      "description": "",
      "$comment": "TODO: Is this useful? What is represented here that is not represented in 'links' schema?",
      "type": "array",
      "items": {
        "description": "",
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "description",
    "tags",
    "authors",
    "related",
    "lastUpdated",
    "uuid",
    "version",
    "scope",
    "role",
    "audience",
    "type",
    "draft",
    "license",
    "extends",
    "keywords",
    "bibliography",
    "toc",
    "resources",
    "requirements",
    "references",
    "objectId"
  ]
}
